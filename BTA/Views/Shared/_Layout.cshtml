<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BTA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home-site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/library-site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BTA.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-green-bta box-shadow ">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/img/btaLogo2.jpg" alt="" width="60px"/>
                </a>
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BTA</a>*@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li> 
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Library">Library</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Analitycs">Analitycs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="about-us">About Us</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    @*Search bar*@
    <search-bar class="border-bottom box-shadow">
        <form action="/Home/FetchBook" method="post" class="form-fetch-book search-form-bar" role="form">
            <input type="text" name="book" placeholder="Title" class="input-book-search search-bar-input-title"/>
            <input type="text" name="author" class="input-book-search search-bar-input-author" placeholder="Author" />
            <button type="submit" class=" search-bar-submit">Search</button>
        </form>
    </search-bar>
    @*Search bar end*@
    
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    

    <footer class="border-top footer text-muted">
        <div class="container">
            <p class="footer-p"> &copy; 2005 - 2023, Book Tracking App, Stockolm, Sweden.</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
